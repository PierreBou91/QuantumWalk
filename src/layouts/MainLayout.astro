---
import '../styles/global.css';

export interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'Quantum Walk - A Thought Experiment',
  description = 'Explore the Quantum Walk: a deterministic time-step sequence inspired by the Many Worlds interpretation of quantum mechanics.'
} = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />

    <!-- Open Graph / Social Media -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <title>{title}</title>
  </head>
  <body>
    <!-- Header -->
    <header class="fixed top-0 left-0 right-0 z-50 bg-cosmic-black/80 backdrop-blur-md border-b border-cosmic-purple/20">
      <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-3 sm:py-4">
        <div class="flex items-center justify-between">
          <a href="/" class="group">
            <h1 class="text-lg sm:text-2xl font-bold bg-gradient-to-r from-star-white via-nebula-purple to-cosmic-blue bg-clip-text text-transparent group-hover:from-nebula-purple group-hover:via-cosmic-purple group-hover:to-star-white transition-all">
              The Quantum Walk
            </h1>
          </a>

          <!-- Desktop Navigation -->
          <div class="hidden md:flex items-center space-x-4 lg:space-x-6">
            <a
              href="/"
              class="text-star-white/80 hover:text-star-white transition-colors text-sm font-medium"
            >
              Home
            </a>
            <a
              href="/matcher"
              class="text-star-white/80 hover:text-star-white transition-colors text-sm font-medium"
            >
              Matcher
            </a>
            <a
              href="/explorer"
              class="text-star-white/80 hover:text-star-white transition-colors text-sm font-medium"
            >
              Explorer
            </a>
            <a
              href="/about"
              class="text-star-white/80 hover:text-star-white transition-colors text-sm font-medium"
            >
              About
            </a>
            <a
              href="/theory"
              class="text-star-white/80 hover:text-star-white transition-colors text-sm font-medium"
            >
              Theory
            </a>
          </div>

          <!-- Mobile Menu Button -->
          <button id="mobile-menu-button" class="md:hidden p-2 text-star-white">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </button>
        </div>

        <!-- Mobile Navigation -->
        <div id="mobile-menu" class="hidden md:hidden mt-4 pb-3 space-y-2">
          <a
            href="/"
            class="block px-3 py-2 text-star-white/80 hover:text-star-white hover:bg-cosmic-purple/20 rounded transition-colors text-sm font-medium"
          >
            Home
          </a>
          <a
            href="/matcher"
            class="block px-3 py-2 text-star-white/80 hover:text-star-white hover:bg-cosmic-purple/20 rounded transition-colors text-sm font-medium"
          >
            Matcher
          </a>
          <a
            href="/explorer"
            class="block px-3 py-2 text-star-white/80 hover:text-star-white hover:bg-cosmic-purple/20 rounded transition-colors text-sm font-medium"
          >
            Explorer
          </a>
          <a
            href="/about"
            class="block px-3 py-2 text-star-white/80 hover:text-star-white hover:bg-cosmic-purple/20 rounded transition-colors text-sm font-medium"
          >
            About
          </a>
          <a
            href="/theory"
            class="block px-3 py-2 text-star-white/80 hover:text-star-white hover:bg-cosmic-purple/20 rounded transition-colors text-sm font-medium"
          >
            Theory
          </a>
        </div>
      </nav>

      <script>
        const mobileMenuButton = document.getElementById('mobile-menu-button');
        const mobileMenu = document.getElementById('mobile-menu');

        mobileMenuButton?.addEventListener('click', () => {
          mobileMenu?.classList.toggle('hidden');
        });
      </script>
    </header>

    <!-- Main Content -->
    <main class="min-h-screen pt-20">
      <slot />
    </main>

    <!-- Footer -->
    <footer class="border-t border-cosmic-purple/20 bg-cosmic-black/80 backdrop-blur-md mt-20">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="text-center text-star-white/60 text-sm">
          <p>
            A thought experiment inspired by
            <a
              href="https://www.youtube.com/watch?v=kTXTPe3wahc"
              target="_blank"
              rel="noopener noreferrer"
              class="text-cosmic-purple hover:text-nebula-purple transition-colors underline"
            >
              Veritasium's Many Worlds video
            </a>
            and
            <a
              href="https://www.preposterousuniverse.com/somethingdeeplyhidden/"
              target="_blank"
              rel="noopener noreferrer"
              class="text-cosmic-blue hover:text-cosmic-purple transition-colors"
            >
              <em>Something Deeply Hidden</em>
            </a> by Sean M. Carroll
          </p>
          <p class="mt-2">
            This is purely speculativeâ€”not scientific proof. Built with
            <a
              href="https://astro.build"
              target="_blank"
              rel="noopener noreferrer"
              class="text-cosmic-blue hover:text-cosmic-purple transition-colors"
            >
              Astro
            </a>
          </p>
          <p class="mt-2">
            <a
              href="https://github.com/PierreBou91/QuantumWalk"
              target="_blank"
              rel="noopener noreferrer"
              class="text-cosmic-purple hover:text-nebula-purple transition-colors inline-flex items-center gap-1"
              title="View source code on GitHub"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
              </svg>
              View on GitHub
            </a>
          </p>
        </div>
      </div>
    </footer>
  </body>
</html>
